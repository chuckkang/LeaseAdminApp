@model IEnumerable<DBConnectionTest.Models.ExpenseDetail>

@foreach (var item in Model)
{
<form method="post" action="/expenses/update">
    @Html.AntiForgeryToken()
    <p>@item.Amount -- @item.ExpenseDetailsId</p>
    <div class="form-group">
        @Html.LabelFor(i => item.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(i => item.Amount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(i => item.Amount, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</form>
    }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
}